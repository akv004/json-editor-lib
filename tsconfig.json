{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/json-core/src/*"],
      "@editor/*": ["packages/json-editor-react/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
